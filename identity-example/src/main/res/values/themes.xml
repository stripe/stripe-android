<resources>

    <style name="Theme.BaseIdentityTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

    </style>

    <!-- Base application theme. -->
    <style name="Theme.Theme1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.Theme2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryVariant">@color/red_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize the font of button and body. -->
        <item name="textAppearanceBody1">@style/TextAppearance.IdentityExampleAppTheme2.Body1</item>
        <item name="textAppearanceButton">@style/TextAppearance.IdentityExampleAppTheme2.Button</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.IdentityExampleAppTheme2.H6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.IdentityExampleAppTheme2.Subtitle1</item>

    </style>
</resources>
