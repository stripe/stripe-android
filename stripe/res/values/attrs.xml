<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CardInputView">
        <attr name="cardHintText" format="string" />
        <attr name="cardTint" format="color"/>
        <attr name="cardTextErrorColor" format="color"/>
        <attr name="android:focusedByDefault" />
    </declare-styleable>

    <declare-styleable name="CardElement">
        <attr name="shouldShowPostalCode" format="boolean" />
        <attr name="shouldRequirePostalCode" format="boolean" />
        <attr name="shouldRequireUsZipCode" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BecsDebitWidget">
        <attr name="companyName" format="string" />
    </declare-styleable>
</resources>
