<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/iinLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <Button
            android:id="@+id/button_card_image_verification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cardimageverificationsheet"/>

        <Button
            android:id="@+id/button_card_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cardscansheet"/>

        <Button
            android:id="@+id/button_card_scan_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cardscanfragment"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
